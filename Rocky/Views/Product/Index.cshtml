@model IEnumerable<Rocky.Models.Product>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
               <i class="fa-solid fa-circle-plus"></i> &nbsp; Create new Product
            </a> 
        </div>
    </div>

    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product name
                    </th>
                    <th>
                        Price
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.Price</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                @*Update + insert Method*@
                                <a asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">
                                    <i class="fa-solid fa-pen"></i>
                                </a> 
                                <a asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">
                                    <i class="fa-solid fa-eraser"></i>
                                </a> 
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No product exists.</p>
    }
</div>



